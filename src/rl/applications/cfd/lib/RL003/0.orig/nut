FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include "../system/globalVariables";

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    inlet
    {
        type            calculated;
        value           uniform 0;
    }

    outlet
    {
        type            calculated;
        value           uniform 0;
    }

    suction_side
    {
        type            nutkWallFunction;
        value           uniform 0;
    }

    pressure_side
    {
        type            nutkWallFunction;
        value           uniform 0;
    }

    trailing_edge
    {
        type            nutkWallFunction;
        value           uniform 0;
    }
}

